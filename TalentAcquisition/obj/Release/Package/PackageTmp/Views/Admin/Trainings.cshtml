
@{
    ViewBag.Title = "Trainings";
    Layout = "~/Views/Shared/_NormalLayout.cshtml";
}
<p style="font-size: 22px;">Trainings</p>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Dashboard","Admin")">Home</a></li>
    @*<li><a href="#">Private</a></li>*@
    @*<li><a href="#">Pictures</a></li>*@
    <li class="active">Trainings</li>
</ol>
<section class="container body-content">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <p class="">Activities</p>
            </div>
            <div class="panel-body">
                <ul>
                    <li>@Html.ActionLink("View Personal Training Schedule", "Personal/Schedule", "Trainings")</li>
                    <li>@Html.ActionLink("Request For New Training", "Request/Create", "Trainings")</li>
                     @if (User.IsInRole("Admin"))
                     {
                            <li>@Html.ActionLink("Approve Training Requests", "All", "Trainings")</li>
                            <li>@Html.ActionLink("Setup Training Course", "Course", "Trainings")</li>
                            <li>@Html.ActionLink("Setup Training Provider", "Provider", "Trainings")</li>
                            @*<li>@Html.ActionLink("Approve Training Request", "ApproveRequest", "Trainings")</li>*@
                     }
                </ul>
            </div>
        </div>
    </div>
</section>
