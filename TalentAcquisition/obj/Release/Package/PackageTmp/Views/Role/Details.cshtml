@model TalentAcquisition.Core.Domain.OfficePosition
@using TalentAcquisition.DataLayer;
@{
    ViewBag.Title = "Position Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .adminsidebar {
        height: 100%;
        min-height: 500px;
        padding: 1em;
        background-color: rgba(0,0,0,1);
        color: white;
    }

        .adminsidebar h1, .adminsidebar h2, .adminsidebar h3 {
            color: snow;
            font-size: 125%;
            text-shadow: white;
            text-align: center;
        }

        .adminsidebar .nav {
            margin: 0 auto;
            /*background:rgba(255,255,255,0.1);*/
            padding: 1em;
        }

        .adminsidebar li {
            border-bottom: 1px solid white;
            text-align: left;
            border-left: 4px solid brown;
        }

            .adminsidebar li a:hover {
                color: rgb(4, 5, 47);
                background-color: snow;
                display: block;
            }

            .adminsidebar li a {
                color: white;
                line-height: 2em;
                width: 100%;
            }

        .adminsidebar .nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            border: 0;
        }

            .adminsidebar .nav ul li {
                border: 0;
                margin-left: 1em;
            }

                .adminsidebar .nav ul li a:link,
                .adminsidebar .nav ul li a:visited {
                    color: snow;
                    padding: 0.5em 0.5em 0.5em 1em;
                    display: block;
                    text-decoration: none;
                    border-left: 5px solid rgb(239,213,252);
                }

                .adminsidebar .nav ul li a:hover {
                    color: rgb(49,52,61);
                    border-left: 5px solid rgb(250,136,234);
                }
    /*.bioform input,
                    select {
                        width: 100%;
                        max-width: 100%;
                    }
                    .bioform #submit input
                    {
                        max-width: 280px;
                    }*/
</style>
<section class="mainbody">
    <div class="container">
        <div class="col-md-4 adminsidebar">
            <div class="container">
                <ul class="nav">
                    @Html.Partial("_AdminDashboardSidebar")
                </ul>
            </div>
        </div>
        <div class="col-md-8">
            <section class="container body-content">
                <div class="row bioform">
                    <h3>Dashboard</h3>
                    <br/>
                    <h4>Role Information</h4>
                    <dl class="dl-horizontal">
                        @using (var context = new TalentContext())
                        {
                            var dept = context.Departments.Find(Model.DepartmentID);
                            var ind = context.Industries.Find(Model.IndustryID);

                            <dt>
                                Department
                            </dt>

                            <dd>
                                @dept.DepartmentName
                            </dd>

                            <dt>
                                Industry
                            </dt>

                            <dd>
                                @ind.Name
                            </dd>
                        }

                        <dt>
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Title)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.RoleSummary)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.RoleSummary)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Reqirements)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Reqirements)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.IsAvailable)
                        </dt>

                        <dd>
                            @if (Model.IsAvailable)
                            {
                                <p>Vaccant</p>
                            }
                            else
                            {
                              <p>Occupied</p> 
                            }
                        </dd>

                    </dl>
                </div>
                <a class="btn btn-default" href="/Admin/manage_officeposition/Edit/@Model.OfficePositionID">Edit Role</a>
            </section>
        </div>

    </div>
</section>

