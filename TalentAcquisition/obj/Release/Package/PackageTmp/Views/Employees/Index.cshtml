                    <a href="@Url.Action("Personnel/create","Admin")" class="btn"><img src="~/Assets/Icons/File-Plus.png" width="20" />Create New Employee</a>
                    <div class="row">
                        <style>
                            .card {
                                    /* Add shadows to create the "card" effect */
                                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                                    transition: 0.3s;
                                }

                                /* On mouse-over, add a deeper shadow */
                                .card:hover {
                                    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
                                }
                           .card .container {
                                padding: 2px 16px;
                                margin-bottom:1em;
                            }
                        </style>

                        @foreach (var employee in Model)
                        {
                            <div class="col-md-4">
                                <div class="card">
                                    
                                    @if (String.IsNullOrEmpty(employee.PassportDetails))
                                    {
                                        <img src="~/Assets/Icons/Man-Suit-2.png" alt="Avatar" width="200" style="">
                                    }
                                    else
                                    {
                                           string url = Path.Combine(Server.MapPath("~/Uploads/"), employee.UserId + "_img.png");
                                           string azureurl = Path.Combine("https://codelabstorage.blob.core.windows.net/webappstoragedotnet-imagecontainer/",employee.PassportDetails);
                                      <img src="@azureurl" alt="Avatar" width="200" style="">
                                    }
                                    <div class="container">
                                        <h4><b>@employee.FullName</b></h4>
                                        <p>@employee.OfficePosition.Title</p>
                                        <p>@employee.PhoneNumber</p>
                                        <h6>@Html.ActionLink("Details", "Details", new { id = employee.ID },
                                   htmlAttributes: new { @class = "btn btn-default btn-xs" })</h6>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                   
