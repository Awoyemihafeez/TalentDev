                                    @Html.Action("_GetInterviewFeedbackForm", "Application", new { requisitionid = ViewBag.requisitionid, applicationid = ViewBag.applicationid })
                                </div>
                                <br/>
                            </div>
                        </div>
                        <div class="panel panel-primary" style="margin-top:-1.7em;">
                            <div class="panel-heading">
                                Applicant Profile
                            </div>
                            <div class="panel-body" style="min-height:400px;margin-bottom:10em">
                                <div class="row">
                                    <div class="container">
                                        @Html.Action("_GetApplicantOverview", "Applicant", new { applicantid = ViewBag.applicantid })
                                    </div>
                                </div>
                            </div>
                        </div>
                </div>

            </section>
        </div>
