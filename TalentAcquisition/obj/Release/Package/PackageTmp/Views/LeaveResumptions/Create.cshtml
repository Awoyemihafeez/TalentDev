                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.LeaveType, htmlAttributes: new { @class = "col-md-4" })
                                        <div class="col-md-8">
                                            @Html.EditorFor(model => model.LeaveType, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.LeaveType, "", new { @class = "text-danger", @readonly = true })
