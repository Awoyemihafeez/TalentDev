                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse4">Finalize Schedule</a>
                </h4>
            </div>
            <div id="collapse4" class="panel-collapse collapse">
                <div class="panel-body">
                    @Html.Action("_GetFinalizeInterviewForm", new { requisitionid = ViewBag.requisitionid, applicationid = ViewBag.applicationid })
