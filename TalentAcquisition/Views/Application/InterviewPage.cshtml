<script type="text/javascript">
    $("#advance").prop("disabled", true);

    $(function () {
        $('.panel-heading a').on('click', function (e) {
            if ($(this).parents('.panel').children('.panel-collapse').hasClass('in')) {
                e.preventDefault();
            }
        });
        $('#closeinterview').on('click', function () {
            $("#advance").click();
        });
    });
</script>
