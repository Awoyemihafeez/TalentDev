@model TalentAcquisition.Core.Domain.JobApplication

@{
    ViewBag.Title = "ManageApplication";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<div class="mainbody">
<div class="container body-content">
    <h2>Manage Requisitions</h2>
    <div class="col-md-4">
            <ul class="" style="margin-top:-60px">
               @Html.Partial("_ApplicantSideBar")
            </ul>
        </div>
    <div class="col-md-8" style="color:black">
        <section class="container body-content" style="margin-top:2em">
            <div class="row">
                @if (Equals(Model.ApplicationStatus.ToString(), "Interview"))
                {
                        <h3>Interview</h3>
                        @Html.Action("_GetInterview")
                }
                @if (Equals(Model.ApplicationStatus.ToString(), "JobOffer"))
                {
                        <h3>Job Offer</h3>
                        @Html.Action("_GetJobOffer")
                }
            </div>
            <div class="row">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" href="#collapse1">Application Details</a>
                            </h4>
                        </div>
                        <div id="collapse1" class="panel-collapse collapse">
                            <div class="panel-body">
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.JobRequisition.JobTitle)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.JobRequisition.JobTitle)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.JobSeeker.ApplicantNumber)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.JobSeeker.ApplicantNumber)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.RegistrationDate)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.RegistrationDate)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.ApplicationStatus)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.ApplicationStatus)
                                    </dd>

                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                @Html.Action("_GetRequisition",new {id=Model.JobRequisitionID })
            </div>
            
            
        </section>
    </div>

</div>
</div>
