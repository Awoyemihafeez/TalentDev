@model IEnumerable<TalentAcquisition.Core.Domain.JobApplication>

@{
    ViewBag.Title = "Job Applications";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";

}
@*<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>*@
@*<script src="~/Scripts/jquery-1.12.4.min.js" type="text/javascript"></script>*@
<style>
    .profile-link-active {
        border-left: 2px solid rgb(4, 5, 47);
    }

        .profile-link-active a:hover {
            border-left: none;
        }

    #blackview {
        position: fixed; /* Stay in place */
        z-index: 200; /* Sit on top */
        left: 0;
        top: 0;
        width: 100%; /* Full width */
        height: 100%; /* Full height */
        overflow: auto; /* Enable scroll if needed */
        background-color: rgb(0,0,0); /* Fallback color */
        background-color: rgba(0,0,0,0.4);
    }

    #bioform input,
    select {
        width: 100%;
        max-width: 100%;
    }

    #bioform #submit input {
        max-width: 280px;
    }
    /***/
</style>
<div class="mainbody">
    <div class="container body-content">
        <div class="row container" id="pagecontent">
            <div class="col-lg-4">
                @Html.Partial("_ApplicantSideBar")
            </div>
            <div class="col-lg-8" style="color:black;font-size:80%;padding-top:7em;">

                <table class="table table-bordered table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.JobRequisition.JobTitle)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.JobRequisition.Location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.JobSeeker.ApplicantNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RegistrationDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ApplicationStatus)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobRequisition.JobTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobRequisition.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JobSeeker.ApplicantNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegistrationDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ApplicationStatus)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "manage_application/", new { id = item.JobApplicationID,title=item.JobRequisition.JobTitle })
                            </td>
                        </tr>
                    }
                </table>
</div>
    </div>
</div>
</div>