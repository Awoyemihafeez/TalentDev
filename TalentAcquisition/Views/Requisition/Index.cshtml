
@{
    ViewBag.Title = "Manage Requisitions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#RequisitionTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>

<div class="container body-content">
    <h2>Manage Requisitions</h2>
    <div class="col-md-4 adminsidebar">
        <div class="container">
            <br/>
            <ul class="nav">
                @Html.Partial("_AdminDashboardSidebar")
            </ul>
        </div>
    </div>
    <div class="col-md-8">
        <section class="container body-content">
            <span>@ViewBag.Message</span>
            <input class="form-control" id="myInput" type="text" placeholder="Search..">
            <div class="row">
                <h3>Incoming Requisitions</h3>
                @Html.Action("_GetIncomingRequisitions","Requisition")
            </div>
            <div class="row">
                <h3>Active Requisitions</h3>
                @Html.Action("_GetActiveRequisitions","Requisition")
            </div>
        </section>
    </div>

</div>

