@model TalentAcquisition.Core.Domain.Employee

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .adminsidebar {
        height: 100%;
        min-height: 500px;
        padding: 1em;
        color: black;
    }

        .adminsidebar h1, .adminsidebar h2, .adminsidebar h3 {
            color: snow;
            font-size: 125%;
            text-shadow: white;
            text-align: center;
        }

        .adminsidebar .nav {
            margin: 0 auto;
            /*background:rgba(255,255,255,0.1);*/
            padding: 1em;
        }

        .adminsidebar li {
            border-bottom: 1px solid white;
            text-align: left;
            border-left: 4px solid brown;
        }

            .adminsidebar li a:hover {
                color: rgb(4, 5, 47);
                background-color: snow;
                display: block;
            }

            .adminsidebar li a {
                color: white;
                line-height: 2em;
                width: 100%;
                color: black;
            }

        .adminsidebar .nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            border: 0;
        }

            .adminsidebar .nav ul li {
                border: 0;
                margin-left: 1em;
            }

                .adminsidebar .nav ul li a:link,
                .adminsidebar .nav ul li a:visited {
                    color: black;
                    padding: 0.5em 0.5em 0.5em 1em;
                    display: block;
                    text-decoration: none;
                    border-left: 5px solid rgb(239,213,252);
                }

                .adminsidebar .nav ul li a:hover {
                    color: rgb(49,52,61);
                    border-left: 5px solid rgb(250,136,234);
                }
    /*.bioform input,
                    select {
                        width: 100%;
                        max-width: 100%;
                    }
                    .bioform #submit input
                    {
                        max-width: 280px;
                    }*/
</style>
<section class="mainbody">
    <div class="container">
        <div class="col-md-4 adminsidebar">
            <div class="container">
                <ul class="nav">
                    @Html.Partial("_AdminDashboardSidebar")
                </ul>
            </div>
        </div>
        <div class="col-md-8">
            <section class="container body-content">
                <div class="row bioform">
                    <h2>Employee Manager</h2>
                    <br />
                    <h4></h4>
                    <!--Comment-->
                    <span class="alert-danger"></span>
                    <span class="alert-danger">@ViewBag.Message</span>

                    <h4>Employee</h4>
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.OfficePosition.Title)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.OfficePosition.Title)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.EmployeeNumber)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.EmployeeNumber)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.EmploymentDate)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.EmploymentDate)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FirstName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.LastName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.LastName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DateOfBirth)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DateOfBirth)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Address)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Address)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.PhoneNumber)
                        </dd>

                    </dl>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                            @Html.ActionLink("Edit", "Edit", new { id = Model.ID },
                                   htmlAttributes: new { @class = "btn btn-default btn-sm col-md-4" })
                            @Html.ActionLink("Delete", "Delete", new { id = Model.ID },
                                   htmlAttributes: new { @class = "btn btn-default btn-sm col-md-4 pull-right" })
                        </div>
                    <br/>
                </div>
            </section>
        </div>

    </div>
</section>